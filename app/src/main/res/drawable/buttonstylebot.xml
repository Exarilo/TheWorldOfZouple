<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient
                android:startColor="#F3E5D3"
                android:centerColor="#F5D2A5"
                android:endColor="#F3DABA"/>
            <corners android:radius="5dp" android:bottomRightRadius="15dp" android:bottomLeftRadius="15dp"/>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient
                android:startColor="#CCC9C9"
                android:centerColor="#B2B0B0"
                android:endColor="#9D9D9D" />
            <corners android:radius="5dp" android:bottomRightRadius="15dp" android:bottomLeftRadius="15dp"/>

        </shape>
    </item>
</selector>



