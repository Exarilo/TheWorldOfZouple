<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".SecondActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/VglIcone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/VglIcone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/VglIcone3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/VglIcone4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Hgl5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Vgl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Hgl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Hgl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1997264" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/HglEnnemiLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2897264" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Hgl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Hgl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <LinearLayout
        android:id="@+id/layoutFirstLine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Hgl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="28dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/zouplopiece_foreground" />

        <TextView
            android:id="@+id/textViewGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ZouploPieces : "
            android:textColor="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/tvGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@android:color/background_dark"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="2sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btSuccess"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:background="@mipmap/succes_foreground" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/Hgl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Hgl1">

        <ScrollView

            android:id="@+id/ScrollViewHistorique"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left">

            <TextView
                android:id="@+id/tvHistorique"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/design_default_color_on_primary"
                android:requiresFadingEdge="vertical"
                android:scrollbars="vertical"
                android:textColor="@android:color/background_dark" />
        </ScrollView>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Vgl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />


    <LinearLayout
        android:id="@+id/linearLayoutCarPengu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/Hgl3"
        app:layout_constraintEnd_toEndOf="@+id/Vgl1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hgl2">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/LvlEtProgBarre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayoutCarLvl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/tvLVL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LvL : 1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="2sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:translationZ="90dp" />

                <ImageView
                    android:id="@+id/imLvlUp"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:contentDescription="TODO"
                    android:visibility="invisible"
                    app:srcCompat="@mipmap/lvlup_foreground" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/linearLayoutCarLvl"
                android:layout_margin="16dp"

                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/pbXP"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="107dp"
                    android:layout_height="20dp"
                    android:max="100"
                    android:progress="0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutCarHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/layoutProgressBar"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/carHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="2sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:text="HP : 1000 / 1000"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linearLayoutProgressBarCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/relativeLayoutProgressMalusDamagesCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/pbCarHP"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:max="1000"
                    android:progress="1000" />


                <TextView
                    android:id="@+id/tvDamages2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="2sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:visibility="invisible"
                    android:textStyle="bold"
                    android:translationZ="90dp"
                    tools:text="- 0" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/imgCaraLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgCaracter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:srcCompat="@mipmap/pingucaracter_foreground" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutAttack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/Hgl3"
        app:layout_constraintEnd_toStartOf="@+id/Vgl2"
        app:layout_constraintStart_toStartOf="@+id/Vgl1"
        app:layout_constraintTop_toBottomOf="@+id/Hgl2">

        <RelativeLayout
            android:id="@+id/AttackLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgPenguAttack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:visibility="invisible"
                app:srcCompat="@mipmap/spelldepart_foreground" />

            <ImageView
                android:id="@+id/imgEnnemiAttack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                app:srcCompat="@mipmap/spelldepart_foreground" />


        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutEnnemiCar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/Hgl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Vgl2"
        app:layout_constraintTop_toBottomOf="@+id/HglEnnemiLayout">



        <RelativeLayout
            android:id="@+id/LvlEtProgBarreEnnemi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayoutEnnemiLVL"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="16dp"
                android:orientation="horizontal">




                <TextView
                    android:id="@+id/tvEnnemiLVL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LvL : 1"
                    android:textColor="@color/colorPrimary"

                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="2sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:translationZ="90dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutEnnemiHP"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/linearLayoutEnnemiLVL"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/EnnemiHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HP : 1000 / 1000"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="2sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"/>


            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayoutProgressBarEnnemiMalus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relativeLayoutProgressBarEnnemiMalus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/pbEnnemiHP"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:indeterminate="false"
                    android:max="1000"
                    android:progress="1000" />





                <TextView
                    android:id="@+id/tvDamages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="2sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    tools:text="- 0" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/imgMonsterLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMonster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutAttackFuirConso"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/Hgl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hgl3">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.80"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btAttack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:text="ATTAQUER" />

            <Button
                android:id="@+id/btRunAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".50"

                android:text="FUIR" />
        </LinearLayout>


        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="CONSOMMABLE" />
    </LinearLayout>








    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/VglIcone1"
        app:layout_constraintTop_toBottomOf="@+id/Hgl4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btCaracter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".80"
            android:background="@drawable/bordericon"
            android:foreground="@mipmap/caracter_foreground" />
        <View
            android:id="@+id/dividerPerso"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:outlineSpotShadowColor="@android:color/background_dark"

            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="Personnage"
            android:gravity="center"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:background="@drawable/bordericon"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/VglIcone1"
        app:layout_constraintEnd_toStartOf="@id/VglIcone2"
        app:layout_constraintTop_toBottomOf="@+id/Hgl4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btSpells"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".80"
            android:background="@drawable/bordericon"
            android:foreground="@mipmap/grimmoire_foreground" />
        <View
            android:id="@+id/dividerSorts"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="Sorts"
            android:gravity="center"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:background="@drawable/bordericon"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/VglIcone2"
        app:layout_constraintEnd_toStartOf="@id/VglIcone3"
        app:layout_constraintTop_toBottomOf="@+id/Hgl4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btInventory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".80"
            android:background="@drawable/bordericon"
            android:foreground="@mipmap/inventory_foreground" />
        <View
            android:id="@+id/dividerInventaire"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="Inventaire"
            android:gravity="center"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:background="@drawable/bordericon"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/VglIcone3"
        app:layout_constraintEnd_toStartOf="@id/VglIcone4"
        app:layout_constraintTop_toBottomOf="@+id/Hgl4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btShop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".80"
            android:background="@drawable/bordericon"
            android:foreground="@mipmap/shop_foreground" />
        <View
            android:id="@+id/dividerBoutique"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="Boutique"
            android:gravity="center"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:background="@drawable/bordericon"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/VglIcone4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hgl4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btCraft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".80"
            android:background="@drawable/bordericon"
            android:foreground="@mipmap/craft_foreground" />
        <View
            android:id="@+id/dividerCraft"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="Craft"
            android:gravity="center"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:background="@drawable/bordericon"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />
    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>