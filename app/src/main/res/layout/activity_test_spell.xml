<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestSpell">


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="43dp"
                android:layout_height="37dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@mipmap/zouplopiece_foreground" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZouploPieces : "
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvGoldSpell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                android:textStyle="bold" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btClose"
                android:layout_width="52dp"
                android:layout_height="53dp"
                android:background="@mipmap/btclose_foreground" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Degats x 1,2"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/boulefeu2_foreground" />
            <TextView
                android:id="@+id/costSpell1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1500"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btBuySpell1"
                android:layout_width="84dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:background="@mipmap/buy_foreground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Degats x 1,4"
                android:layout_gravity="center"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/attackcaracter_foreground" />
            <TextView
                android:id="@+id/costSpell2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000"
                android:layout_gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btBuySpell2"
                android:layout_width="84dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:background="@mipmap/buy_foreground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Degats x 1,6"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/boulefeuforte_foreground" />
            <TextView
                android:id="@+id/costSpell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 000"
                android:layout_gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btBuySpell3"
                android:layout_width="84dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:background="@mipmap/buy_foreground" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Degats x 1,8"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/boulefeu3_foreground" />
            <TextView
                android:id="@+id/costSpell13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="18 000"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btBuySpell4"
                android:layout_width="84dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:background="@mipmap/buy_foreground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Degats x 2"
                android:layout_gravity="center"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/boulefeu4_foreground" />
            <TextView
                android:id="@+id/costSpell4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 000"
                android:layout_gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btBuySpell5"
                android:layout_width="84dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:background="@mipmap/buy_foreground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Degats x 2,2"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/boulefeu5_foreground" />
            <TextView
                android:id="@+id/costSpel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70 000"
                android:layout_gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btBuySpell6"
                android:layout_width="84dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:background="@mipmap/buy_foreground" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>