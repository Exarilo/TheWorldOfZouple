<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SuccessActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"

    android:focusableInTouchMode="true"
    tools:context=".SuccessActivity">


    <Button
        android:id="@+id/btCloseSucces"
        android:layout_width="406dp"
        android:layout_height="729dp"

        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.414" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="364dp"
        android:layout_height="301dp"
        android:background="@color/design_default_color_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586" />

    <TextView
        android:id="@+id/tvCurrentNbZouple"
        android:layout_width="73dp"
        android:layout_height="20dp"
        android:background="@android:color/transparent"

        android:text="TextView"
        android:textColor="#EC6F14"
        android:textColorHighlight="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:translationZ="91dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.085" />

    <ImageView
        android:id="@+id/btButinMission2"
        android:layout_width="74dp"
        android:layout_height="65dp"
        android:layout_marginStart="284dp"
        android:layout_marginLeft="284dp"
        android:background="@android:color/transparent"
        android:translationZ="90dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.233"
        app:srcCompat="@mipmap/butin_foreground" />

    <ProgressBar
        android:id="@+id/pbNbDamages"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:background="@android:color/transparent"
        android:layout_width="94dp"
        android:layout_height="18dp"
        android:max="900"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.268" />

    <TextView
        android:id="@+id/tvNbDamages"
        android:layout_width="181dp"
        android:layout_height="17dp"
        android:background="@android:color/transparent"
        android:text="Atteindre 900 de degats"
        android:textColor="@color/design_default_color_on_secondary"
        android:textStyle="bold"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.271" />

    <TextView
        android:id="@+id/tvNbZouple"
        android:layout_width="181dp"
        android:layout_height="17dp"
        android:background="@android:color/transparent"
        android:text="Tuer un total de 10 zouples "
        android:textColor="@color/design_default_color_on_secondary"
        android:textStyle="bold"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.095" />

    <ProgressBar
        android:id="@+id/pbNbZoupleTue"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="98dp"
        android:layout_height="17dp"
        android:background="@android:color/transparent"
        android:max="10"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.095" />

    <ImageView
        android:id="@+id/btButinMission1"
        android:layout_width="74dp"
        android:layout_height="65dp"
        android:layout_marginBottom="232dp"
        android:background="@android:color/transparent"
        android:translationZ="90dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/butin_foreground" />
</androidx.constraintlayout.widget.ConstraintLayout>